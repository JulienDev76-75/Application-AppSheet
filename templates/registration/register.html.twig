{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<div class="container bg-light border border-danger mt-5 mb-0 bg-cover text-white" style="background: url(https://bootstrapious.com/i/snippets/sn-bg-image/bg.jpg)">
    <h2 class="text-center mt-5 mb-5 text-decoration-underline pt-3 pb-3">S'inscrire</h2>
    <div class="ms-4">
    {{ form_start(registrationForm) }}
    <div class="container">
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.poste) }}
    {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe :'
    }) }}
    </div>
    </div>
      {{ form_end(registrationForm) }}
</div>  
    
{% endblock %}
