      borderWidth: 2
    }, {
      type: 'bar',
      label: 'Nombre de cartes vendues / mois 2021',
      backgroundColor:   'rgb(10,14,30)',
      stack: 'Stack 0',
      data: {{ cartesvendues2021|raw }},
    }]
  },
  options: {
    responsive: true,
    title: {
      display: true,
    },
    tooltips: {
      mode: 'index',
      intersect: true
    },
    scales: {
      xAxes: [{
        stacked: true,
