                <canvas id="myChartSatisTemperature" width="10" height="10"></canvas>
            </div>
          </div>
      </div>
</div>

{# Satisfaction globale #}
<script>
var ctx = document.getElementById('myChartSatisGlobale').getContext('2d');
var myChart = new Chart(ctx, {
  type: 'bar',
  data: {
    labels: ["T1", "T2", "T3", "T4"],
    datasets: [{
      type: 'bar',
      label: 'Satisfaction total / mois en % 2019',
      borderColor: 'rgb(30,144,255)',
      borderWidth: 2,
      fill: false,
      data: {{ rendusatisglobale2019 | raw }},
    }, {
      type: 'bar',
      label: 'Satisfaction total / mois en % 2020',
      backgroundColor: 'rgb(30,100,200)',
      stack: 'Stack 1',
      data: {{ rendusatisglobale2020 | raw }},
      borderColor: 'white',
      borderWidth: 2
    }, {
      type: 'bar',
      label: 'Satisfaction total / mois en % 2021',
      backgroundColor: 'rgb(10,14,30)',
      stack: 'Stack 0',
      data: {{ rendusatisglobale2021 | raw }},
    }]
  },
  options: {
    responsive: true,
    title: {
      display: true,
    },
    tooltips: {
      mode: 'index',
      intersect: true
    },
    scales: {
      xAxes: [{
        stacked: true,
      }]
    }
  }
});
</script>

