{% extends 'base.html.twig' %}

{% block title %}Statisitiques Satisfaction{% endblock %}

{% block body %}
{% if is_granted('ROLE_DS') %}
<h2 class="text-center mb-2 mt-5 text-dark">Taux de satisfaction / année</h2>
<div class="row row-cols-1 row-cols-md-4 row-cols-mlg-4 g-4 mt-5 mb-5 mx-auto">
      <div class="col">
          <div class="card">
            <div class="card-body">
                <canvas id="myChartSatisGlobale" width="10" height="10"></canvas>
            </div>
          </div>
      </div>
      <div class="col">
          <div class="card">
            <div class="card-body">
                <canvas id="myChartSatisProprete" width="10" height="10"></canvas>
            </div>
          </div>
      </div>
      <div class="col">
          <div class="card">
            <div class="card-body">
                <canvas id="myChartCompetencePersonnel" width="10" height="10"></canvas>
            </div>
          </div>
      </div>
      <div class="col">
          <div class="card">
            <div class="card-body">
                <canvas id="myChartSatisHoraire" width="10" height="10"></canvas>
            </div>
          </div>
      </div>
      <div class="col">
          <div class="card">
            <div class="card-body">
                <canvas id="myChartSatisTemperature" width="10" height="10"></canvas>
            </div>
          </div>
      </div>
</div>

{# Satisfaction globale #}
<script>
var ctx = document.getElementById('myChartSatisGlobale').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ["T1", "T2", "T3", "T4"],
        datasets: [{
            label: 'Satisfaction globale / trimestre',
            data:  {{ rendusatisglobale2019 | raw }},
            backgroundColor: 
                'rgba(255, 99, 132, 0.2)',
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});
</script>

{# satisfaction propreté #}
<script>
var ctx = document.getElementById('myChartSatisProprete').getContext('2d');
var myChart = new Chart(ctx, {
  type: 'bar',
  data: {
    labels: ["T1", "T2", "T3", "T4"],
    datasets: [{
      type: 'bar',
      label: 'Solde total / mois 2017',
      borderColor: 'rgb(30,144,255)',
      borderWidth: 2,
      fill: false,
      data: {{ rendusatisglobale2019 | raw }},
    }, {
      type: 'bar',
      label: 'Solde total / mois 2020',
      backgroundColor: 'rgb(30,100,200)',
      stack: 'Stack 1',
      data: {{ rendusatisglobale2019 | raw }},
      borderColor: 'white',
      borderWidth: 2
    }, {
      type: 'bar',
      label: 'Solde total / mois 2021',
      backgroundColor: 'rgb(10,14,30)',
      stack: 'Stack 0',
      data: {{ rendusatisglobale2019 | raw }},
    }]
  },
  options: {
    responsive: true,
    title: {
      display: true,
    },
    tooltips: {
      mode: 'index',
      intersect: true
    },
    scales: {
      xAxes: [{
        stacked: true,
      }]
    }
  }
});
</script>

