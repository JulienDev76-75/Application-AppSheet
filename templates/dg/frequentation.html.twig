{% extends 'base.html.twig' %}

{% block title %}Fréquentation et chiffre d'affaire{% endblock %}

{% block body %}
{% if is_granted('ROLE_DS') %}

 <h1>fullscreenchange event example</h1>

<h2 class="text-center mt-5 mb-5 text-danger"></h2>
<div class="w-75 mx-auto">
    <table class="table table-bordered mb-5 mt-5">
        <thead class="bg-dark text-white">
            <tr>
                <th scope="col">Année</th>
                <th scope="col">Mois</th>
                <th scope="col">Activité</th>
                <th scope="col">Chiffre d'Affaire</th>
                <th scope="col">Fréquentation</th>
                <th scope="col">Panier Moyen</th>
                <th scope="col">edit</th>
                <th scope="col">supprimer</th>
            </tr>
        </thead>
        <tbody>
          {% if rig is not empty %}
            {% for rigs in rig %}
                <tr class="bg-light">
                    <td> {{rigs.annee}}</td>
                </tr>
                <tr class="bg-light">
                    <td> {{rigs.mois}}</td>
                    <td> {{rigs.activite}}</td>
                    <td> {{rigs.chiffreAffaire}}</td>
                    <td> {{rigs.frequentation}}</td>
                    <td> {{rigs.panierMoyen}}</td>
                    <td> <a href="{{ path('editRig', {id: rigs.id})}}" class="card-link btn btn-danger text-white my-5">Modifier</a></td>
                    <td> <a href="{{ path('deleteRig', {id: rigs.id})}}" class="card-link btn btn-danger text-white my-5" onclick="return confirm('Attention ! Ceci va supprimer définitivement votre fiche. Cliquez sur ok pour valider')">Supprimer</a></td>
                </tr>
            {% endfor %}
            {% else %}
            <h2 class="text-danger text-center mt-5 mb-5">Veuillez rajouter un Rig</h2>
        {% endif %}
        </tbody>
    </table>
{% endif %}

{% if is_granted('ROLE_DR') %}
{% endif %}

{% if is_granted('ROLE_DG') %}
<div class="container mt-5 h-75">
  <div class="col" id="redimensionnable" style="resize: both; overflow: scroll;">
      <div class="card">  
          <div class="card-body">
            <canvas id="myChartPanier" width="300" height="300"></canvas>
          </div>
      </div>
    </div>
</div>
<div class="container">
    <div class="w-75 mx-auto mt-5">
    <table class="table table-bordered mb-5 mt-5">
        <thead class="bg-dark text-white">
        <tr>
            <th scope="col">Mois</th>
            <th scope="col">Année</th>
            <th scope="col">Activité</th>
            <th scope="col">Fréquentation</th>
            <th scope="col">Chiffre d'Affaire</th>
            <th scope="col">Panier Moyen</th>
            <th scope="col">Editer</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
    <tbody>
        {% if sitesDGS is not empty %}
        {% for sitesDG in sitesDGS %}
            <tr class="bg-light">
            <td> {{sitesDG.nomDuSite}}</td>
            </tr>
        {% for freqDG in freqDGS %}
        {% if sitesDG.id == freqDG.site.id %}
            <tr class="bg-light">
            <td class="py-3">{{freqDG.mois}}</td>
            <td>{{freqDG.annee}}</td>
            <td>{{freqDG.activite}}</td>
            <td>{{freqDG.frequentation}}</td>
            <td>{{freqDG.chiffreAffaire}}</td>
            <td>{{freqDG.panierMoyen}}</td>
            <td><a href="{{ path('editRig', {id: freqDG.id}) }}" class="card-link btn btn-danger text-white my-5">Modifier</a></td>
            <td><a href="{{ path('deleteRig', {id: freqDG.id}) }}" class="card-link btn btn-danger text-white my-5" onclick="return confirm('Attention ! Ceci va supprimer définitivement votre fiche. Cliquez sur ok pour valider')">Supprimer</a></td>
            </tr>
            {% endif %}
        {% endfor %}
        {% endfor %}
        {% else %}
            <h2 class="text-danger text-center mt-5 mb-5">Veuillez rajouter un site avec la stratégie SWOT.</h2>
        {% endif %}
    </tbody> 
    </table>
    </div>
</div>

<script>
var ctx = document.getElementById('myChartPanier').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: {{ mois | raw }},
        datasets: [{
            label: 'Satisfaction propreté en %',
            data:  {{ test | raw }},
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});
</script>
{% endif %}
{% endblock %}


{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js" integrity="sha512-Wt1bJGtlnMtGP0dqNFH1xlkLBNpEodaiQ8ZN5JLA5wpc1sUlk/O5uuOMNgvzddzkpvZ9GLyYNa8w2s7rqiTk5Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}