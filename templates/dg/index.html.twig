<script type="text/javascript">
function affichenouv() {
if (document.fonction.options.value == "nouveau")
    document.getElementById('ajout').style.display = 'block';
else
    document.getElementById('ajout').style.display = 'none';
}

let div;
function afficher(select){
    let nouvdiv = div || document.getElementById("nouv"),
        i = select.selectedIndex;
    nouvdiv.style.display = (select.options[i].value == "nouv") ? "block" : "none";
}
</script>
