{% extends 'base.html.twig' %}

{% block title %}Cout de communication{% endblock %}

{% block body %}
<div class="row row-cols-1 row-cols-md-4 row-cols-mlg-4 g-4 mt-5 mb-5 mx-auto">
      <div class="col">
          <div class="card">
            <div class="card-body">
                <canvas id="myChartRépartitionObjectif" width="100" height="100"></canvas>
            </div>
          </div>
      </div>
</div>

<script>
var ctx = document.getElementById('myChartRépartitionObjectif').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels:  {{ annee | raw }},
        datasets: [{
            label: 'Répartition des types opérations',
            data: {{ repartitionObjectif | raw }},
            backgroundColor: [
                'rgba(255, 99, 138, 0.2)',
                'rgba(135, 60, 220, 0.2)',
            ],
            borderWidth: 1
        }]
    },
});
</script>
{% endblock %}

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js" integrity="sha512-Wt1bJGtlnMtGP0dqNFH1xlkLBNpEodaiQ8ZN5JLA5wpc1sUlk/O5uuOMNgvzddzkpvZ9GLyYNa8w2s7rqiTk5Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}